<div class="hero-image" style="height: 85%; background-image: url('/img/hero.jpg');">
  <div class="hero-text">
    <h1 style="font-style: Georgia; color: #fff; font-size:50px;">Enjoy Delicious Food</h1>
    <p>Place your order now</p>
    <button>TASTE NOW</button>
  </div>

</div>
</div>
<section class="container py-5">
<div> 
  <h2 class="my-3 font-bold">All Products</h2>
</div>
<div>
  <div class="listing-section">
    <div class="row">

      <% products.forEach((product)=> {  %>

        
      <div class="col-md-3 col-6">
        <div class="product">
          <div class="image-box">
            <div class="images" style="background-image: url('/img/<%= product.image %>');"></div>
          </div>
          <div class="text-box">
            <h2 class="item"><%= product.name %></h2>
            <h3 class="price">Rs <%= product.price %>/-</h3>
            <p class="description"><%= product.description %></p>
            <button type="button" data-product="<%= JSON.stringify(product) %>" name="item-1-button" id="item-1-button" class="add-to-cart">Add to Cart</button>
          </div>
        </div>
      </div>

      <% }) %>

    
    </div>
    
    
   
  </div>
  
</div>
</section>